<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#fffe">


    <TextView
        android:id="@+id/txtNomeUsuarioPerguntas"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_gravity="center|center_vertical"
        android:gravity="center_vertical"
        android:text="Bem vindo @"
        android:paddingLeft="10sp"
        android:textColor="#fff"
        android:textSize="24sp"
        android:background="@color/colorPrimary"
    />

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10sp"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="#fffe"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000"
        android:text="Que país é esse?"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <RadioGroup
            android:id="@+id/rdGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/rdFirst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="{valor 1}"
                android:textSize="20sp"
                android:textColor="#000"
            />

            <RadioButton
                android:id="@+id/rdSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="{valor 2}"
                android:textSize="20sp"
                android:textColor="#000"
            />

            <RadioButton
                android:id="@+id/rdThird"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="{valor 1}"
                android:textSize="20sp"
                android:textColor="#000"
            />

            <RadioButton
                android:id="@+id/rdFourth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="{valor 1}"
                android:textSize="20sp"
                android:textColor="#000"
            />
        </RadioGroup>
    </LinearLayout>
    <Button
        android:id="@+id/btnResponder"
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10sp"
        android:text="Responder"
        android:textSize="18sp"
    />
</LinearLayout>